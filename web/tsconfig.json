{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "jsx": "preserve",
    "skipLibCheck": true,
    "target": "esnext",
    "isolatedModules": true,
    "moduleResolution": "node",
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true
  },
  "exclude": ["node_modules", "scripts", "coverage", "build", "__test__", "bin", "jest.config.js"],
  "include": ["pages", "src"]
}
