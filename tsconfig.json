{
  "readme": "tsconfig for LSP. NOT for tsup builds which need to be configured for preact.",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["es2020", "DOM"],
    "module": "esnext",
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "moduleResolution": "node",
    "target": "es2020",
  },
  "exclude": [
    "public",
    "node_modules",
    "scripts",
    "coverage",
    "pages",
    "build",
    "__test__",
    "bin",
    "jest.config.ts",
    "tsup.config.ts"
  ]
}
